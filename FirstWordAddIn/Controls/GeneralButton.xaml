<UserControl x:Class="Regy2.Controls.GeneralButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Regy2.Controls"
             mc:Ignorable="d" 
             x:Name="uc">
	<Button
		MinWidth="145"
		Height="45"
		Background="#85A5C8"
		HorizontalContentAlignment="Center"
		Padding="20, 0, 20, 0"
		FontFamily="Roboto"
		Foreground="White"
		FontSize="22"
		Command="{Binding Path=ClickCommand, ElementName=uc}"
		Content="{Binding Path=TextStr, Mode=TwoWay, ElementName=uc, UpdateSourceTrigger=PropertyChanged}">
	</Button>
</UserControl>
