			<Grid
				Grid.Row="0" 
				Margin="0, 0, 0, 4">
				<TextBlock 
					Foreground="#4A525D"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Text="{Binding Path=TitleStr, ElementName=uc}" 
					FontSize="18" 
					FontWeight="Bold"
					FontFamily="Roboto">
				</TextBlock>
				<TextBlock 
					Foreground="#4A525D"
					HorizontalAlignment="Right"
					VerticalAlignment="Center"
					Text="{Binding Path=DateStr, ElementName=uc}" 
					FontStyle="Italic"
					FontSize="14" 
					FontFamily="Roboto">
				</TextBlock>
			</Grid>
			<TextBlock Grid.Row="1" 
				Foreground="#4A525D"
				Text="{Binding Path=MessageStr, ElementName=uc}" 
				FontSize="18" 
				TextWrapping="Wrap"
				FontFamily="Roboto">
